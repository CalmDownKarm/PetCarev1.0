<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="0dp"
    android:background="@color/cards_background"
    android:layout_height="match_parent"
    tools:context="teamfirefighters.petcarev10.CardsActivity">


    <ImageButton
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:id="@+id/backButton"
        android:background="@drawable/back"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="17dp"
        android:layout_alignParentLeft="true"
        android:clickable="true" />

    <TextView
        android:id="@+id/breedName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold"/>


    <ImageButton
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:id="@+id/homeButton"
        android:background="@drawable/home"
        android:layout_marginRight="15dp"
        android:layout_marginTop="17dp"
        android:layout_alignParentRight="true"
        android:clickable="true" />

    <TextView
        android:id="@+id/cardCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:textColor="@color/card_activity_background_text"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/bellowCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="FIN.."
        android:textColor="@color/card_activity_background_text"
        android:textSize="110dp" />

    <com.wenchao.cardstack.CardStack
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="67dp"
        android:paddingBottom="30dp"
        android:clipChildren="false"
        android:clipToPadding="false" />




</RelativeLayout>
